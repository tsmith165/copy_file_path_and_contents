{
    "name": "copyfilepathandcontent",
    "displayName": "CopyFilePathAndContent",
    "description": "Copy file path and content to clipboard",
    "version": "1.0.3",
    "publisher": "TorreySmith",
    "icon": "images/copy_logo.png",
    "galleryBanner": {
        "color": "#222222",
        "theme": "dark",
        "path": "images/copy_full.png"
    },
    "engines": {
        "vscode": "^1.82.0"
    },
    "categories": [
        "Other"
    ],
    "main": "src/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "extension.copyFilePathAndContent",
                "title": "Copy File Path and Contents",
                "icon": {
                    "light": "./resources/copy-icon.svg",
                    "dark": "./resources/copy-icon.svg"
                }
            },
            {
                "command": "extension.copyOpenTabsPathAndContent",
                "title": "Copy OPEN Tabs Path and Content"
            },
            {
                "command": "extension.copySelectedTabPathAndContent",
                "title": "Copy SELECTED Tab Path and Content"
            },
            {
                "command": "extension.copyCurrentFilePathAndContent",
                "title": "Copy Current File Path and Content"
            }
        ],
        "menus": {
            "editor/title/context": [
                {
                    "command": "extension.copyOpenTabsPathAndContent",
                    "group": "copy"
                },
                {
                    "command": "extension.copySelectedTabPathAndContent",
                    "group": "copy"
                }
            ],
            "explorer/context": [
                {
                    "command": "extension.copyFilePathAndContent",
                    "when": "resourceLangId",
                    "group": "copy"
                }
            ]
        },
        "keybindings": [
            {
                "command": "extension.copyCurrentFilePathAndContent",
                "key": "ctrl+alt+c",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.copyOpenTabsPathAndContent",
                "key": "ctrl+alt+a",
                "when": "editorTextFocus"
            }
        ]
    },
    "activationEvents": [
        "onCommand:extension.copyFilePathAndContent",
        "onCommand:extension.copyOpenTabsPathAndContent",
        "onCommand:extension.copySelectedTabPathAndContent",
        "onCommand:extension.copyCurrentFilePathAndContent"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/tsmith165/copy_file_path_and_contents.git"
    }
}
